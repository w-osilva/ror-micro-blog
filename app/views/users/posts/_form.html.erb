
<div class="box box-primary">
  <div class="box-header with-border">
    <h3 class="box-title">New Post</h3>
  </div>

  <!-- form start -->
  <%= simple_form_for("Post", url: post_index_url, method: :post) do |f| %>
  <%= f.error_notification %>
      <input type="hidden" name="post[user_id]" value="<%= current_user.id %>">
    <div class="box-body">
      <div class="form-group">
        <textarea class="form-control" name="post[text]" id="post_text" placeholder="Write a new post" ></textarea>
      </div>
      <div class="form-group">
        <div class="radio">
          <label class="">
            <input type="radio" name="post[visibility]" value="0" checked="true">
            Public
          </label>
          <label class="pull-right">
            <input type="radio" name="post[visibility]" value="1">
            Private
          </label>
        </div>

      </div>

    </div>
    <!-- /.box-body -->
    <div class="box-footer">
      <button type="submit" class="btn btn-primary">Publish</button>
    </div>
  <% end %>
</div>