<%= simple_form_for(@profile) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :birthdate %>
    <%= f.input :nickname %>
    <%= f.input :about %>
    <%= f.input :picture %>
    <%= f.input :visibility %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
