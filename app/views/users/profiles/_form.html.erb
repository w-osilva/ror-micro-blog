<%= simple_form_for(@profile, html:{class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.input :first_name%>
    <%= f.input :last_name %>
    <%= f.input :birthdate, as: :date,
                start_year: Date.today.year - 90, end_year: Date.today.year - 12,
                order: [:day, :month, :year] %>

    <%= f.input :nickname %>
    <%= f.input :about %>
    <%= f.input :picture %>
    <%= f.input :visibility %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
