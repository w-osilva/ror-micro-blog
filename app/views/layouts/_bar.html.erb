<header class="main-header">

  <!-- Logo -->
  <a href="<%= root_path %>" class="logo">
    <!-- mini logo for sidebar mini 50x50 pixels -->
    <span class="logo-mini"><b>M</b>B</span>
    <!-- logo for regular state and mobile devices -->
    <span class="logo-lg"><b>Micro</b> Blog</span>
  </a>

  <!-- Header Navbar: style can be found in header.less -->
  <nav class="navbar navbar-static-top">
    <!-- Sidebar toggle button-->
    <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
      <span class="sr-only">Toggle navigation</span>
    </a>
    <!-- Navbar Right Menu -->
    <div class="navbar-custom-menu">

        <!-- User Account: style can be found in dropdown.less -->
        <% if user_signed_in? %>
          <ul class="nav navbar-nav">
            <li class="dropdown user user-menu">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                <img src="<%= current_user.profile.picture %>" class="user-image" alt="User Image">
                <span class="hidden-xs"><%= current_user.email %></span>
              </a>
              <ul class="dropdown-menu">
                <!-- User image -->
                <li class="user-header">
                  <img src="/assets/theme/dist/img/user2-160x160.jpg" class="img-circle" alt="User Image">

                  <p>
                    <%= current_user.profile.full_name %>
                    <small>Member since <%= current_user.created_at.strftime("%d/%m/%Y") %></small>
                  </p>
                </li>
                <!-- Menu Body -->
                <li class="user-body">
                  <div class="row">
                    <div class="col-xs-4 text-center">
                      <a href="#">Followers</a>
                    </div>
                    <div class="col-xs-4 text-center">
                      <a href="#">Friends</a>
                    </div>
                  </div>
                  <!-- /.row -->
                </li>
                <!-- Menu Footer-->
                <li class="user-footer">
                  <div class="pull-left">
                    <%= link_to 'Account', edit_user_registration_path, class: "btn btn-default btn-flat" %>
                    <%= link_to 'Profile', edit_profile_path(current_user.profile), class: "btn btn-default btn-flat" %>
                  </div>
                  <div class="pull-right">
                    <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-default btn-flat"  %>
                  </div>
                </li>
              </ul>
            </li>
          </ul>
        <% else %>
          <ul>
            <li><%= link_to "Login", new_user_session_path %></li>
          </ul>
        <% end %>


      </ul>
    </div>

  </nav>
</header>